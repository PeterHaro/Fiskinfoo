<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/material_availability_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/material_card_default_margin_horizontal"
    android:layout_marginEnd="@dimen/material_card_default_margin_horizontal"
    android:layout_marginBottom="@dimen/material_card_default_margin_bottom"
    android:layout_marginTop="@dimen/material_card_default_margin_top"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_view_default_elevation"
    app:cardCornerRadius="@dimen/card_view_medium_rounded_corners"
    >

    <RelativeLayout
        android:id="@+id/settings_row_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        >

        <ImageView
            android:id="@+id/settings_row_icon_image_view"
            android:layout_width="@dimen/settings_row_icon_image_view_width"
            android:layout_height="@dimen/settings_row_icon_image_view_height"
            android:layout_marginStart="@dimen/settings_row_image_view_margin_start"
            android:layout_marginBottom="@dimen/settings_row_padding_bottom"
            android:layout_marginTop="@dimen/settings_row_padding_top"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            />

        <TextView
            android:id="@+id/settings_row_setting_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/settings_row_icon_image_view"
            android:layout_marginStart="@dimen/settings_row_text_view_margin_start"
            android:duplicateParentState="true"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="@string/placeholder_setting_name"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>