<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingTop="@dimen/navigation_header_padding_top"
    android:paddingBottom="@dimen/navigation_header_padding_bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/navigation_header_user_name_text_view"
        android:text="@string/placeholder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/navigation_header_name_text_view_margin_start"
        android:layout_marginBottom="@dimen/navigation_header_name_text_view_margin_bottom"
        />

    <ImageView
        android:id="@+id/navigation_header_verified_user_image_view"
        android:layout_width="@dimen/navigation_header_verified_image_view_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/navigation_header_verified_image_view_padding_start"
        android:layout_toEndOf="@+id/navigation_header_user_name_text_view"
        android:layout_alignTop="@+id/navigation_header_user_name_text_view"
        android:layout_alignBottom="@+id/navigation_header_user_name_text_view"
        android:visibility="invisible"
        />



</RelativeLayout>