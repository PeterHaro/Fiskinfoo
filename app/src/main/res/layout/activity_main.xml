<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="no.sintef.whohu.MainActivity"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_blue"
            android:minHeight="?attr/actionBarSize"
            >

            <RelativeLayout
                android:id="@+id/toolbar_offline_mode_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/toolbar_offline_mode_image_view"
                    android:layout_width="@dimen/toolbar_offline_mode_image_view_width"
                    android:layout_height="@dimen/toolbar_offline_mode_image_view_height"
                    android:background="@drawable/ic_signal_cellular_connected_no_internet_4_bar_white_36dp"
                    android:duplicateParentState="true"
                    />

            </RelativeLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/bright_foreground_material_dark"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/bright_foreground_material_dark"
                app:tabTextColor="@color/passive_orange"
                />
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_activity_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_main_network_error_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/my_page_network_error_text_view_margin_bottom"
        android:layout_marginTop="@dimen/my_page_network_error_text_view_margin_top"
        android:gravity="center"
        android:textSize="@dimen/my_page_network_error_text_size"
        android:visibility="gone"
        />


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_view_header"
        android:elevation="16dp"
        />
</android.support.v4.widget.DrawerLayout>