<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dialog_container_margin_right"
            android:layout_marginStart="@dimen/dialog_container_margin_left"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/offline_mode_info_dialog_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/offline_mode_info_dialog_switch_margin_right"
            android:layout_marginStart="@dimen/offline_mode_info_dialog_switch_margin_left"
            android:layout_marginTop="@dimen/dialog_internal_container_large_margin_top"/>

        <TextView
            android:id="@+id/offline_mode_info_dialog_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offline_mode_info_dialog_switch"
            android:layout_marginTop="@dimen/dialog_internal_container_large_margin_top"/>


        <LinearLayout
            android:id="@+id/offline_mode_info_dialog_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offline_mode_info_dialog_text_view"
            android:layout_marginTop="@dimen/dialog_internal_container_large_margin_top"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offline_mode_info_dialog_bottom_button_container"
            style="?android:attr/buttonBarStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offline_mode_info_dialog_linear_layout"
            android:layout_marginBottom="@dimen/dialog_internal_container_margin_bottom"
            android:layout_marginTop="@dimen/dialog_internal_container_large_margin_top"
            android:orientation="horizontal"
            android:paddingBottom="1.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="5.0dip">

            <Button
                android:id="@+id/offline_mode_info_dialog_dismiss_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:text="@string/ok"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>