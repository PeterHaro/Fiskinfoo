<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loading_dialog_info_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/loading_dialog_margin_bottom"
        android:layout_marginLeft="@dimen/loading_dialog_margin_left"
        android:layout_marginRight="@dimen/loading_dialog_margin_right"
        android:layout_marginTop="@dimen/loading_dialog_margin_top"/>

    <TextView
        android:id="@+id/loading_dialog_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/loading_dialog_margin_bottom"
        android:layout_marginLeft="@dimen/loading_dialog_margin_left"
        android:layout_marginRight="@dimen/loading_dialog_margin_right"/>
</LinearLayout>