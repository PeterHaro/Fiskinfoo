<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/utility_lat_lon_row_set_position_button"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/utility_ddm_row_latitude_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_container_margin_top"
                android:layout_marginTop="@dimen/dialog_internal_container_large_margin_top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                >

                <EditText
                    android:id="@+id/utility_ddm_row_latitude_degrees_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_small"
                    android:layout_weight="0.4"
                    android:gravity="end"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/utility_ddm_row_latitude_minutes_edit_text"
                    android:nextFocusLeft="@+id/utility_ddm_row_latitude_minutes_edit_text"
                    android:nextFocusRight="@+id/utility_ddm_row_latitude_minutes_edit_text"
                    android:nextFocusUp="@+id/utility_ddm_row_latitude_minutes_edit_text"
                    android:selectAllOnFocus="true"
                    />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:text="@string/symbol_geographical_degrees"
                    android:labelFor="@+id/utility_ddm_row_latitude_degrees_edit_text"
                    />

                <EditText
                    android:id="@+id/utility_ddm_row_latitude_minutes_edit_text"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_small"
                    android:layout_weight="1.0"
                    android:gravity="end"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:nextFocusDown="@+id/utility_ddm_row_longitude_degrees_edit_text"
                    android:nextFocusLeft="@+id/utility_ddm_row_longitude_degrees_edit_text"
                    android:nextFocusRight="@+id/utility_ddm_row_longitude_degrees_edit_text"
                    android:nextFocusUp="@+id/utility_ddm_row_longitude_degrees_edit_text"
                    android:selectAllOnFocus="true"
                    />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:text="@string/symbol_geographical_minutes"
                    android:labelFor="@+id/utility_ddm_row_latitude_minutes_edit_text"
                    />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/utility_ddm_row_latitude_cardinal_direction_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/utility_dms_row_cardinal_direction_switch_padding_start"
                    android:paddingEnd="0dp"
                    android:textOff="@string/cardinal_direction_symbol_north"
                    android:textOn="@string/cardinal_direction_symbol_south"
                    app:showText="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/utility_ddm_row_longitude_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_container_margin_top"
                android:layout_marginTop="@dimen/dialog_internal_container_large_margin_top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="1.0dp"
                android:paddingLeft="4.0dp"
                android:paddingRight="4.0dp"
                >

                <EditText
                    android:id="@+id/utility_ddm_row_longitude_degrees_edit_text"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_small"
                    android:layout_weight="0.4"
                    android:gravity="end"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/utility_ddm_row_longitude_minutes_edit_text"
                    android:nextFocusLeft="@+id/utility_ddm_row_longitude_minutes_edit_text"
                    android:nextFocusRight="@+id/utility_ddm_row_longitude_minutes_edit_text"
                    android:nextFocusUp="@+id/utility_ddm_row_longitude_minutes_edit_text"
                    android:selectAllOnFocus="true"
                    />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:text="@string/symbol_geographical_degrees"
                    android:labelFor="@+id/utility_ddm_row_longitude_degrees_edit_text"
                    />

                <EditText
                    android:id="@+id/utility_ddm_row_longitude_minutes_edit_text"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_small"
                    android:layout_weight="1.0"
                    android:gravity="end"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:selectAllOnFocus="true"
                    />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:text="@string/symbol_geographical_minutes"
                    android:labelFor="@+id/utility_ddm_row_longitude_minutes_edit_text"
                    />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/utility_ddm_row_longitude_cardinal_direction_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/utility_dms_row_cardinal_direction_switch_padding_start"
                    android:paddingEnd="0dp"
                    android:textOff="@string/cardinal_direction_symbol_west"
                    android:textOn="@string/cardinal_direction_symbol_east"
                    app:showText="true"
                    android:checked="true"
                    />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/utility_lat_lon_row_set_position_button"
            android:layout_width="@dimen/utility_row_help_button_width"
            android:layout_height="@dimen/utility_row_help_button_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:background="@drawable/ic_my_location_black_24dp"
            />
    </RelativeLayout>
</TableRow>