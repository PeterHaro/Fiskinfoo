<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fiskinfoo.no.sintef.fiskinfoo.Fragments.OfflineModeFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:divider="@drawable/linear_layout_view_divider"
            android:showDividers="beginning|middle|end"
            >

            <Switch
                android:id="@+id/offline_mode_fragment_offline_mode_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/offline_mode_fragment_switch_padding_vertical"
                android:paddingBottom="@dimen/offline_mode_fragment_switch_padding_vertical"
                android:text="@string/off"
                />

            <TextView
                android:id="@+id/offline_mode_fragment_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/offline_mode_info"
                />

            <LinearLayout
                android:id="@+id/offline_mode_fragment_map_layer_switches_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_internal_container_large_margin_top"
                android:orientation="vertical"
                >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
